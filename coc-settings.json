{
  // === ESLint ===
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.options": {
    "extensions": [".js", ".jsx", ".ts", ".tsx"]
  },

  // === Prettier (via coc-prettier) ===
  "prettier.enable": true,
  "prettier.requireConfig": false,
  "prettier.disableLanguages": ["vue"],

  // === TypeScript / TS Server ===
  "tsserver.enable": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",

  // === Tailwind CSS (coc-tailwindcss) ===
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript",
    "javascriptreact": "javascript"
  },
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)",
    "tw=\"([^\"]*)",
    "tw={\"([^\"}]*)",
    "tw\\.\\w+`([^`]*)",
    "classnames\\(([^)]*)\\)",
    "clsx\\(([^)]*)\\)"
  ],

  // === CSS ===
  "css.validate": true,
  "css.lint.unknownAtRules": "ignore",

  // === Emmet (coc-emmet) ===
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "javascriptreact": "html",
    "typescriptreact": "html"
  },

  // === Completion behavior ===
  "suggest.noselect": false,
  "suggest.enablePreselect": true,

  // === Format on save ===
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "css",
    "scss",
    "html"
  ],

  // VSCode-style trigger for ESLint fixAll â€” coc-eslint respects this
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // === Jumps ===
  "coc.preferences.jumpCommand": "tab drop",

  // === Yarn PnP SDKs ===
  "tsserver.tsdk": ".yarn/sdks/typescript/lib",
  "eslint.nodePath": ".yarn/sdks",

  // === Prisma (coc-prisma) ===
  "prisma.enable": true,
  "prisma.enableSyntaxHighlighting": true,
  "prisma.schemaFile": "schema.prisma"
}
