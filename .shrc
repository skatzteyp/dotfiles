# Shared shell config (sourced by bash and zsh)

# Use Neovim as default editor
export EDITOR="nvim"

# Only load promptline if present and interactive
if [ -t 1 ] && [ -f "$HOME/.promptline.sh" ]; then
  # shellcheck disable=SC1090
  . "$HOME/.promptline.sh"
fi

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias v='nvim'
alias vi='nvim'

# nodebrew
if [ -d "$HOME/.nodebrew/current/bin" ]; then
  export PATH="$HOME/.nodebrew/current/bin:$PATH"
fi
